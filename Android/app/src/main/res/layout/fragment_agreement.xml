<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    tools:context="com.beijing.chengxin.ui.activity.LoginActivity"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        layout="@layout/nav_bar" />

    <ScrollView
        style="@style/layout_m0"
        android:padding="@dimen/margin_normal"
        android:scrollbars="none">

        <LinearLayout
            style="@style/layout_mw"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_large"
                android:text="@string/chenghu_agreement_title"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/txt_dark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/chenghu_agreement"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
