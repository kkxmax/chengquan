<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        layout="@layout/nav_bar" />

    <ScrollView
        style="@style/layout_m0"
        android:background="@color/color_gray_f0">

        <RelativeLayout
            style="@style/layout_mm">

            <LinearLayout
                style="@style/layout_mw"
                android:orientation="vertical"
                android:background="@color/color_white">

                <LinearLayout
                    style="@style/layout_mw"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/layout_mw"
                        android:paddingTop="@dimen/margin_normal"
                        android:paddingBottom="@dimen/margin_normal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/error_type"/>
                        <ToggleButton
                            android:id="@+id/btn_over"
                            android:paddingLeft="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_extra"
                            android:background="@color/color_transparent"
                            android:drawableLeft="@drawable/btn_radio"
                            android:textOn="@string/error_overstate"
                            android:textOff="@string/error_overstate"
                            android:enabled="false"/>
                        <ToggleButton
                            android:id="@+id/btn_lie"
                            android:paddingLeft="@dimen/margin_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_extra"
                            android:background="@color/color_transparent"
                            android:drawableLeft="@drawable/btn_radio"
                            android:textOn="@string/error_false"
                            android:textOff="@string/error_false"
                            android:enabled="false"/>
                    </LinearLayout>
                    <View style="@style/splite_line_gray"/>

                    <LinearLayout
                        style="@style/layout_mw"
                        android:paddingTop="@dimen/margin_normal_most"
                        android:paddingBottom="@dimen/margin_normal_most">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/error_reason"/>
                        <TextView
                            android:id="@+id/txt_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/str_sample"
                            android:textColor="@color/txt_dark"/>
                    </LinearLayout>
                    <View style="@style/splite_line_gray"/>

                    <LinearLayout
                        style="@style/layout_mw"
                        android:paddingTop="@dimen/margin_normal_most"
                        android:paddingBottom="@dimen/margin_normal_most">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/error_evidence"/>
                        <LinearLayout
                            style="@style/layout_mw"
                            android:paddingLeft="@dimen/margin_normal"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_whyis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_14"
                                android:text="@string/str_sample"
                                android:textColor="@color/txt_dark"/>
                            <HorizontalScrollView
                                android:id="@+id/hs_view_error"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/image_hot_item_width"
                                android:layout_marginTop="@dimen/margin_normal"
                                android:scrollbars="none"
                                android:visibility="visible">
                                <LinearLayout
                                    android:id="@+id/layout_images_error"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/splite_line_gray_8"/>

                <LinearLayout
                    style="@style/layout_mw"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_normal"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="@dimen/image_avatar_width"
                        android:layout_height="@dimen/image_avatar_height"
                        android:background="@drawable/no_image"/>
                    <LinearLayout
                        style="@style/layout_mw"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_normal_most">
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/str_sample"
                            android:textColor="@color/color_orange"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/txt_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_normal"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/str_sample"
                            android:textColor="@color/txt_dark"
                            android:layout_gravity="center_vertical"/>
                        <HorizontalScrollView
                            android:id="@+id/hs_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_hot_item_width"
                            android:layout_marginTop="@dimen/margin_normal"
                            android:scrollbars="none"
                            android:visibility="visible">
                            <LinearLayout
                                android:id="@+id/layout_images"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/splite_line_gray_8"/>

                <LinearLayout
                    style="@style/layout_mw"
                    android:paddingTop="@dimen/margin_normal_most"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal_most">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:text="@string/error_time"
                        android:textColor="@color/txt_gray_light"/>
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:textSize="@dimen/text_size_14"
                        android:text="@string/str_sample_date"
                        android:textColor="@color/txt_gray_light"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_status"
                style="@style/layout_ww"
                android:src="@drawable/label_status_ready"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_normal_top"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>