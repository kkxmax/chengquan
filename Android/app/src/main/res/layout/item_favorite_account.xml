<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_tiny"
        android:background="@color/color_gray_f0"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_12"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/view_body"
        style="@style/layout_mw">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height_normal"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:background="@color/color_white">
            <TextView
                android:id="@+id/txt_name"
                style="@style/layout_mm"
                android:textSize="@dimen/text_size_14"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height_normal"
            android:orientation="horizontal"
            android:visibility="visible">

            <View
                android:id="@+id/view_preview"
                style="@style/layout_0m"
                android:background="@color/color_white_trans_5"/>

            <TextView
                android:id="@+id/txt_follow_me"
                android:layout_width="@dimen/btn_width_normal"
                android:layout_height="@dimen/row_height_normal"
                android:background="@drawable/rect_orange_gradient"
                android:textColor="@color/color_white"
                android:text="@string/str_follow_me"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_follow_notme"
                android:layout_width="@dimen/btn_width_normal"
                android:layout_height="@dimen/row_height_normal"
                android:background="@drawable/rect_gray_gradient"
                android:textColor="@color/txt_gray"
                android:text="@string/str_follow_notme"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
