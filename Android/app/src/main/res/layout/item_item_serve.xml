<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/margin_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/image_avatar_width"
            android:layout_height="@dimen/image_avatar_width">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/image_avatar_height"
                android:layout_height="@dimen/image_avatar_height"
                android:background="@drawable/no_image"
                android:scaleType="centerCrop"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_0w"
            android:layout_marginLeft="@dimen/margin_normal"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_mw"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_name"
                    style="@style/layout_ww"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/txt_dark"/>
                <TextView
                    android:id="@+id/txt_type"
                    style="@style/layout_ww"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingEnd="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@drawable/round_rect_bg_no_border_blue"
                    android:gravity="center"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_12"
                    android:text="互联网"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@string/str_sample_item"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/txt_dark"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


