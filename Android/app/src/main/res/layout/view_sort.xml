<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="vertical"
        android:background="@color/color_gray_f5">

        <LinearLayout
            android:id="@+id/layout_interest"
            style="@style/layout_mw"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_normal_most"
            android:paddingBottom="@dimen/margin_normal_most"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal">
            <TextView
                android:id="@+id/txt_interest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="@dimen/text_size_14"
                android:text="@string/interest"/>
            <ImageView
                android:id="@+id/img_interest"
                style="@style/layout_ww"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/paixu_check"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_trust"
            style="@style/layout_mw"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_normal_most"
            android:paddingBottom="@dimen/margin_normal_most"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal">
            <TextView
                android:id="@+id/txt_trust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="@dimen/text_size_14"
                android:text="@string/trust"/>
            <ImageView
                android:id="@+id/img_trust"
                style="@style/layout_ww"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/paixu_check"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_last"
            style="@style/layout_mw"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_normal_most"
            android:paddingBottom="@dimen/margin_normal_most"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal">
            <TextView
                android:id="@+id/txt_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="@dimen/text_size_14"
                android:text="@string/latest"/>
            <ImageView
                android:id="@+id/img_last"
                style="@style/layout_ww"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/paixu_check"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
