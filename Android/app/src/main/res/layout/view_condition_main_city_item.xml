<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_tiny"
        android:background="@color/color_gray_f0"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_12"
        android:visibility="visible"/>
    <LinearLayout
        style="@style/layout_mm"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_normal_top"
        android:paddingBottom="@dimen/margin_normal_top"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">
        <TextView
            android:id="@+id/txt_title"
            style="@style/layout_mm"
            android:textSize="@dimen/text_size_14"
            android:text="@string/interest"/>
    </LinearLayout>

</LinearLayout>
