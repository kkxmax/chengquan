<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/dialog"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:baselineAligned="false">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large_more"
        android:layout_marginEnd="@dimen/margin_large_more"
		android:orientation="vertical"
		android:background="@drawable/round_rect_white">

		<TextView
			android:id="@+id/txt_camera"
			android:layout_width="match_parent"
			android:layout_height="@dimen/row_height_normal"
			android:gravity="center"
			android:textColor="@color/txt_dark"
			android:textSize="@dimen/text_size_16"
			android:text="@string/camera"/>

		<View style="@style/splite_line_gray"/>

		<TextView
			android:id="@+id/txt_gallery"
			android:layout_width="match_parent"
			android:layout_height="@dimen/row_height_normal"
			android:gravity="center"
			android:textColor="@color/txt_dark"
			android:textSize="@dimen/text_size_16"
			android:text="@string/gallary"/>
	</LinearLayout>

</LinearLayout>
