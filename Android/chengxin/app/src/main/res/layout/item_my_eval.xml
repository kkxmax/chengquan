<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/margin_normal"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/image_avatar_width"
        android:layout_height="@dimen/image_avatar_height"
        android:padding="1dp">
        <ImageView
            android:id="@+id/img_avatar"
            style="@style/layout_mm"
            android:background="@color/color_gray_e5"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_pic"/>
        <TextView
            android:id="@+id/txt_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_orange_gradient"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_10"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_0w"
        android:layout_marginLeft="@dimen/margin_normal"
        android:orientation="vertical">

        <LinearLayout
            style="@style/layout_mw"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_name"
                style="@style/layout_0w"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:textColor="@color/color_orange"/>
            <TextView
                android:id="@+id/txt_eval_type"
                style="@style/layout_ww"
                android:text="@string/front_eval"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_orange"/>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_mw"
            android:layout_marginTop="@dimen/margin_normal_below"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_eval_content"
                style="@style/layout_ww"
                android:layout_marginStart="@dimen/margin_small"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@string/str_sample_eval"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/txt_gray"/>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hs_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_hot_item_width"
            android:layout_marginTop="@dimen/margin_normal"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            style="@style/layout_mw"
            android:layout_marginTop="@dimen/margin_normal_below"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_time"
                style="@style/layout_0w"
                android:layout_weight="2"
                android:padding="@dimen/margin_small"
                android:text="@string/str_sample_date"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray"/>
            <LinearLayout
                style="@style/layout_0w"
                android:orientation="horizontal" >
                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_like_count"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/txt_gray"/>
                <TextView
                    android:id="@+id/txt_like_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_main_blue"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_0w"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_eval_count"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/txt_gray"/>
                <TextView
                    android:id="@+id/txt_eval_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_main_blue"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>