<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent"
    android:orientation="vertical">

    <View style="@style/splite_line_gray"/>

    <LinearLayout
        android:id="@+id/view_body"
        style="@style/layout_mw"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/image_avatar_height"
                android:layout_height="@dimen/image_avatar_height">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/image_avatar_height"
                    android:layout_height="@dimen/image_avatar_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image_enter" />

                <TextView
                    android:id="@+id/txt_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_blank_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rect_orange_gradient"
                    android:gravity="center"
                    android:text="@string/str_enterprise_gongsi"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:layout_marginLeft="@dimen/margin_normal"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/layout_mw">

                    <LinearLayout
                        style="@style/layout_mw"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/layout_ww"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxWidth="@dimen/name_max_width"
                            android:text="@string/msg_login_duplicate"
                            android:textColor="@color/txt_dark"
                            android:textSize="@dimen/text_size_17" />

                        <TextView
                            android:id="@+id/txt_job_type"
                            style="@style/layout_ww"
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/round_rect_bg_no_border_blue"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_one"
                            android:paddingEnd="@dimen/margin_small"
                            android:paddingStart="@dimen/margin_small"
                            android:paddingTop="@dimen/margin_one"
                            android:text="互联网互联网"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxWidth="@dimen/tag_max_width"
                            android:textColor="@color/color_main_blue"
                            android:textSize="@dimen/text_size_12" />

                        <View
                            style="@style/layout_0w"
                            android:layout_height="1dp" />

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/btn_follow"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:background="@drawable/btn_follow"
                        android:textColor="@color/txt_gray_white"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textOff="@string/str_follow"
                        android:textOn="@string/str_followed"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <LinearLayout
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/layout_ww"
                        android:text="@string/str_chengxin_id"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/txt_chengxin_id"
                        style="@style/layout_ww"
                        android:layout_marginStart="@dimen/margin_small"
                        android:text="@string/str_sample"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_comedity"
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/layout_ww"
                        android:background="@drawable/round_rect_blue_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_main_comedity"
                        android:textColor="@color/color_main_blue"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/txt_main_comedity"
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_small"
                        android:lines="1"
                        android:text="@string/str_sample"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item"
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/layout_ww"
                        android:background="@drawable/round_rect_blue_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_item"
                        android:textColor="@color/color_main_blue"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/txt_item"
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_small"
                        android:lines="1"
                        android:text="@string/str_sample"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_serve"
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/layout_ww"
                        android:background="@drawable/round_rect_blue_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_serve"
                        android:textColor="@color/color_main_blue"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/txt_serve"
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_small"
                        android:lines="1"
                        android:text="@string/str_sample"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_recommender"
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/layout_ww"
                        android:background="@drawable/round_rect_orange_white"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_suggest_man"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/txt_suggest_man"
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_small"
                        android:lines="1"
                        android:text="@string/str_sample"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/splite_line_gray"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal_top" />

        <LinearLayout
            style="@style/layout_mw"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/layout_0w"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_chengxin_rate"
                    android:textColor="@color/txt_gray_light"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/txt_chengxin_rate"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_like_count"
                    android:textColor="@color/txt_gray_light"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/txt_like_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_eval_count"
                    android:textColor="@color/txt_gray_light"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/txt_eval_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>