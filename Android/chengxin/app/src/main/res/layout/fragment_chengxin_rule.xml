<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    tools:context="com.beijing.chengxin.ui.activity.LoginActivity"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        layout="@layout/nav_bar" />

    <ScrollView
        style="@style/layout_m0"
        android:padding="@dimen/margin_normal"
        android:scrollbars="none">

        <LinearLayout
            style="@style/layout_mm"
            android:orientation="vertical">

            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/chengxin_rule_header"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/chengxin_rule_eval_title"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"
                android:drawableLeft="@drawable/guize_evaluate"
                android:drawablePadding="@dimen/margin_normal"/>
            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="@string/chengxin_rule_eval_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/chengxin_rule_update_title"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"
                android:drawableLeft="@drawable/guize_error"
                android:drawablePadding="@dimen/margin_normal"/>
            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="@string/chengxin_rule_update_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/chengxin_rule_receive_title"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"
                android:drawableLeft="@drawable/guize_evaluate"
                android:drawablePadding="@dimen/margin_normal"/>
            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="@string/chengxin_rule_receive_content"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/chengxin_rule_footer"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
