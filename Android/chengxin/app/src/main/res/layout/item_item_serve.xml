<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent"
    android:orientation="vertical">

    <View style="@style/splite_line_gray"/>

    <LinearLayout
        android:id="@+id/view_body"
        style="@style/layout_mw"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/image_avatar_height"
                android:layout_height="@dimen/image_avatar_height">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/image_avatar_height"
                    android:layout_height="@dimen/image_avatar_height"
                    android:background="@drawable/no_image_item"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:layout_marginLeft="@dimen/margin_normal"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/layout_mw"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/layout_ww"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="@dimen/name_max_width"
                        android:text="@string/app_name"
                        android:textColor="@color/txt_dark"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/txt_type"
                        style="@style/layout_ww"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@drawable/round_rect_bg_no_border_blue"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_one"
                        android:paddingEnd="@dimen/margin_normal"
                        android:paddingStart="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_one"
                        android:text="互联网"
                        android:textColor="@color/color_main_blue"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_descript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/str_sample_item"
                    android:textColor="@color/txt_dark"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
