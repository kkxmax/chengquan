<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_normal">
        <LinearLayout
            style="@style/layout_0m"
            android:orientation="horizontal"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/btn_all_cnt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/btn_round_orange_gray"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/txt_white_gray"
                android:textOn="@string/all"
                android:textOff="@string/all"
                android:checked="true"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_0m"
            android:orientation="horizontal"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/btn_front_cnt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/btn_round_orange_gray"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/txt_white_gray"
                android:textOn="@string/front_eval"
                android:textOff="@string/front_eval"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_0m"
            android:orientation="horizontal"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/btn_back_cnt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/btn_round_orange_gray"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/txt_white_gray"
                android:textOn="@string/back_eval"
                android:textOff="@string/back_eval"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_body_part"
        style="@style/layout_mw"
        android:orientation="vertical"
        android:background="@color/color_gray_f5">

        <com.beijing.chengxin.ui.widget.ListViewNoScroll
            android:id="@+id/list_view"
            style="@style/layout_mw"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:scrollingCache="true"
            android:background="@color/color_gray_f5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_blank_part"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_height"
        android:background="@color/color_gray_f5"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            style="@style/layout_ww"
            android:src="@drawable/blank"/>
        <TextView
            style="@style/layout_ww"
            android:layout_marginTop="@dimen/margin_normal"
            android:textColor="@color/txt_gray_light"
            android:text="@string/empty_evaluate"/>
    </LinearLayout>
</LinearLayout>
