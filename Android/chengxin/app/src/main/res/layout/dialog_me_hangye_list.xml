<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/dialog"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:baselineAligned="false">

    <RelativeLayout
        style="@style/layout_mw"
        android:layout_marginStart="@dimen/margin_large_more"
        android:layout_marginEnd="@dimen/margin_large_more">

        <LinearLayout
            style="@style/layout_mw"
            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/margin_large_more"
            android:orientation="vertical"
            android:background="@drawable/round_rect_white">

            <TextView
                android:id="@+id/txt_title"
                style="@style/layout_mw"
                android:layout_marginBottom="@dimen/margin_large"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/text_size_16"
                android:text="@string/str_sample"/>

            <View style="@style/splite_line_gray"
                android:layout_marginBottom="@dimen/margin_large"/>

            <com.beijing.chengxin.ui.widget.GridView
                android:id="@+id/grid_view"
                style="@style/layout_ww"
                android:gravity="center"
                android:horizontalSpacing="@dimen/margin_normal"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:scrollingCache="true"
                android:verticalSpacing="@dimen/margin_normal"/>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_extra"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large">

                <Button
                    android:id="@+id/btn_ok"
                    style="@style/layout_0w"
                    android:layout_height="@dimen/row_height_normal"
                    android:background="@drawable/round_rect_orange_gradient"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/ok"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            style="@style/layout_ww"
            android:src="@drawable/off"
            android:background="@color/color_transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
