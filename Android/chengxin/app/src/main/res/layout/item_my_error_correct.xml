<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="vertical"
        android:background="@color/color_white">

        <LinearLayout
            style="@style/layout_mw"
            android:padding="@dimen/margin_normal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/image_avatar_width"
                android:layout_height="@dimen/image_avatar_height"
                android:background="@color/color_white">
                <ImageView
                    android:id="@+id/img_logo"
                    style="@style/layout_mm"
                    android:background="@drawable/no_image"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:layout_marginLeft="@dimen/margin_normal"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/layout_mw"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/layout_0w"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold"
                        android:textColor="@color/color_orange"/>
                    <TextView
                        android:id="@+id/txt_mark"
                        style="@style/layout_ww"
                        android:text="@string/error_6_haoping"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/color_orange"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_mw"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_content"
                        style="@style/layout_ww"
                        android:layout_height="@dimen/row_height_normal"
                        android:lines="2"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:text="@string/str_sample_eval"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/txt_gray"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_mw"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/layout_ww"
                        android:padding="@dimen/margin_small"
                        android:text="@string/error_correct_time_dot"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray"/>
                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/layout_0w"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_sample_date"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_normal"
            android:background="@color/color_gray_f5"/>
    </LinearLayout>

</LinearLayout>